@model Position

@{
    ViewData["Title"] = "Edit Position creation";
}


<div class="container">
    <form class="form-group" asp-controller="Position" asp-action="Edit" method="post">
        <div class="form-group">
            <label for="Title">Title</label>
            <input class="form-control" name="Title" value="@Model.Title"></input>
        </div> 
        <div class="form-group">
            <<input class="btn btn-link" type="submit" value="Save" />
        </div>
    </form>
</div>