@model User 
@{ 
    ViewData["Title"] = "Edit user"; 
} 
<h1>Edit</h1> 
 
 
<div class="container"> 
    <form asp-controller="User" asp-action="Edit" method="post"> 
        <div class="form-group"> 
            <label for="Name">Name</label> 
            <input class="form-control" name="Name" value="@Model.Name" /> 
        </div> 
        <div class="form-group"> 
            <label for="Lastname">LastName</label> 
            <input class="form-control" name="LastName" value="@Model.LastName" /> 
        </div> 
        <div class="form-group"> 
            <label for="PositionId">Choose position</label> 
            <select class="form-control" name="PositionId"> 
                @foreach (var positions in (IEnumerable<Position>)ViewBag.Positions) 
                { 
                    <option value="@positions.id"> 
                        @positions.Title 
                    </option> 
                } 
            </select> 
        </div> 
        <div class="form-group"> 
            <input class="btn btn-link" type="submit" value="Submit" /> 
        </div> 
    </form> 
</div>